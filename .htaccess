# Enable Rewrite Engine
RewriteEngine On

# Remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# Custom 404 page
ErrorDocument 404 /404.php

# Redirect old gallery page to home
RewriteRule ^gallery\.php$ / [R=301,L]

# Redirect old CSS paths
RewriteRule ^css/(.*)$ /assets/css/$1 [R=301,L]
RewriteRule ^js/(.*)$ /assets/js/$1 [R=301,L]
RewriteRule ^img/(.*)$ /assets/img/$1 [R=301,L]

# Security headers
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-XSS-Protection "1; mode=block"

# Block access to sensitive files
<FilesMatch "\.(env|json|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Compress files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>